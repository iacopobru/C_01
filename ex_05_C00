#include <unistd.h>

void	ft_print_comb(void)
{
	short int	number;
	char		boolean;
	char		n_c[3];

	number = 0;
	boolean = 1;
	while (number < 789)
	{
		while (boolean)
		{
			number++;
			n_c[2] = number / 100;
			n_c[0] = number % 10;
			n_c[1] = number / 10 % 10;
			if (n_c[0] != n_c[1] && n_c[0] != n_c[2] && n_c[1] != n_c[2])
				if (n_c[0] > n_c[1] && n_c[1] > n_c[2])
					boolean--;
		}
		boolean++;
		write (1, &(char){n_c[2] + '0'}, 1);
		write (1, &(char){n_c[1] + '0'}, 1);
		write (1, &(char){n_c[0] + '0'}, 1);
		if (number < 789)
			write (1, ", ", 2);
	}
}

int	main(void)
{
	ft_print_comb();
}
